<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">

      <div class="panel panel-default">

        <div class="panel-heading" style="font-size: 22px">
          <strong>
          <%= @event.title %>
          </strong>
        </div>

        <div class="img-responsive">
          <%= image_tag('party.jpg', :class => "img-responsive")  %>

        </div>

        <div class="panel-heading">
         <%= @event.event_date.strftime('%A') %>  <%= @event.event_date.strftime('%v') %>
         <span>   </span>
         <strong> - </strong> <%= @event.hour.strftime('%R') %> <span>hrs.   </span>
       </div>

      <div class="panel-heading" style="background-color: #C52C66">
         <strong>Address:</strong>  <%= @event.address %>
       </div>



       <div class="panel-body">

         <p>
         <%= @event.description %>
         </p>
       </div>
     </div>
   </div>
 </div>
</div>

<p>
  <strong>Visibility:</strong>
  <%= @event.visibility %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
